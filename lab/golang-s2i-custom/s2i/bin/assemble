#!/bin/bash -e

if [[ "$1" == "-h" ]]; then
	# If the 's2i-do288-go' assemble script is executed with '-h' flag, print the usage
	exec /usr/libexec/s2i/usage
fi

echo "---> Installing application source..."
cp -Rf /tmp/src/. ./

echo "---> Building application from source... "
go build -o app goHelloWorld.go 
